{% extends 'base.html.twig' %}

{% block title %} All programs {% endblock %}

{% block body %}
<h1> Toutes les séries de la tables program :</h1>

{% for program in programs %}
    <article>
        <div class="line"><h2>{{ program.title }}</h2><h2 class="cat">{{ program.category.name|default('Catégorie non disponible') }} </h2></div>
        <p>{{ program.synopsis }}</p>
        <a class="fiche" href="{{ path("program_show", { program: program.id }) }}">Voir la fiche</a><a href="{{ path('program_edit', {'id': program.id}) }}">edit</a>

    {{ include('program/_delete_form.html.twig') }}</p>
    
{% else %}
    Aucune série trouvé.
    </article>
    {% endfor %}

    <a class="retour" href="{{path('app_index') }}">
        retour à l'accueil
        </a>
{% endblock %}

