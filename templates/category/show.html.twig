{% extends 'base.html.twig' %}

{% block title %} Categorie # {{ category.name }} {% endblock %}

{% block body %}

{% for program in category.programs %}
    <div>
        <h2>{{loop.index}} / {{ program.title }}</h2>
        <p>{{ program.synopsis }}</p>
        <a href="{{ path("program_show", { slug: program.slug }) }}">Voir la fiche</a>
    </div>
{% else %}
    Aucune série de trouvé.
{% endfor %}

{% endblock %}