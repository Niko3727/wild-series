{% extends 'base.html.twig' %}

{% block title %}Actor index{% endblock %}

{% block body %}
    <h1>Liste des acteurs index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom de l'acteuer</th>
                <th>Date de Naissance</th>
            </tr>
        </thead>
        <tbody>
        {% for actor in actors %}
            <tr>
                <td>{{ actor.name }}</td>
                <td>{{ actor.birthdate|date("d/m/Y") }}</td>
                <td>
                 <a href="{{ path('actor_show', {'id': actor.id}) }}">show</a>
                <a href="{{ path('actor_edit', {'id': actor.id}) }}">edit</a>
                
    {{ include('actor/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
